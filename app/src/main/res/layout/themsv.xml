<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:src="@drawable/avt2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <!-- Mã nhân viên -->
        <TextView
            android:id="@+id/textViewMaNV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Mã nhân viên"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/txtmanv"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_corner_gray"
            android:ems="10"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@+id/textViewMaNV"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Tên nhân viên -->
        <TextView
            android:id="@+id/textViewTenNV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="10dp"
            android:text="Tên nhân viên"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/txtmanv"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/txttennv"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_corner_gray"
            android:ems="10"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@+id/textViewTenNV"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Ngày sinh -->
        <TextView
            android:id="@+id/textViewNgaySinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="10dp"
            android:text="Ngày sinh"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/txttennv"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/txtngaysinh"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_corner_gray"
            android:ems="10"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@+id/textViewNgaySinh"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Phái tính -->
        <TextView
            android:id="@+id/textViewPhaiTinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="10dp"
            android:text="Phái tính"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/txtngaysinh"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/txtphaitinh"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_corner_gray"
            android:ems="10"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@+id/textViewPhaiTinh"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Có gia đình -->
        <TextView
            android:id="@+id/textViewCoGiaDinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="10dp"
            android:text="Có gia đình"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/txtphaitinh"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/txtcogiadinh"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_corner_gray"
            android:ems="10"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@+id/textViewCoGiaDinh"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Địa chỉ -->
        <TextView
            android:id="@+id/textViewDiaChi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="10dp"
            android:text="Địa chỉ"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/txtcogiadinh"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/txtdiachi"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_corner_gray"
            android:ems="10"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@+id/textViewDiaChi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Số điện thoại -->
        <TextView
            android:id="@+id/textViewSoDienThoai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="10dp"
            android:text="Số điện thoại"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/txtdiachi"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/txtsodienthoai"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_corner_gray"
            android:ems="10"
            android:inputType="phone"
            app:layout_constraintTop_toBottomOf="@+id/textViewSoDienThoai"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Trình độ -->
        <TextView
            android:id="@+id/textViewTrinhDo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="10dp"
            android:text="Trình độ"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/txtsodienthoai"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/txttrinhdo"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_corner_gray"
            android:ems="10"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@+id/textViewTrinhDo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Lương cơ bản -->
        <TextView
            android:id="@+id/textViewLuongCB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="10dp"
            android:text="Lương cơ bản"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/txttrinhdo"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/txtluongcb"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_corner_gray"
            android:ems="10"
            android:inputType="number"
            app:layout_constraintTop_toBottomOf="@+id/textViewLuongCB"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Ngày làm việc -->
        <TextView
            android:id="@+id/textViewNgayLamViec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="10dp"
            android:text="Ngày làm việc"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/txtluongcb"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/txtngaylamviec"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_corner_gray"
            android:ems="10"
            android:inputType="date"
            app:layout_constraintTop_toBottomOf="@+id/textViewNgayLamViec"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Chức vụ -->
        <TextView
            android:id="@+id/textViewChucVu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="10dp"
            android:text="Chức vụ"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/txtngaylamviec"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/txtchucvu"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_corner_gray"
            android:ems="10"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@+id/textViewChucVu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Mã phòng ban -->
        <TextView
            android:id="@+id/textViewMaPhongBan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="10dp"
            android:text="Mã phòng ban"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/txtchucvu"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/txtmaphongban"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_corner_gray"
            android:ems="10"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@+id/textViewMaPhongBan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/button_luu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lưu"
            app:layout_constraintTop_toBottomOf="@+id/txtmaphongban"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
