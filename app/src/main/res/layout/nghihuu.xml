<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!-- Tiêu đề của danh sách -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Danh sách nhân viên nghỉ hưu"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:background="#8EC1E9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Nhập năm" />

        <Button
            android:id="@+id/buttonClickHere"
            android:onClick="onButtonClick"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Tìm" />

    </LinearLayout>

    <!-- Header cho danh sách -->
    <LinearLayout
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#E0E0E0"
        android:padding="8dp">

        <!-- Cột STT -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="STT"
            android:textStyle="bold" />

        <!-- Cột Mã nhân viên (manv) -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Mã NV"
            android:textStyle="bold" />

        <!-- Cột Họ tên nhân viên (hotennv) -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Họ tên NV"
            android:textStyle="bold" />

        <!-- Cột Phái tính (phaitinh) -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Phái tính"
            android:textStyle="bold" />

        <!-- Cột Ngày sinh (ngaysinh) -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Ngày sinh"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Danh sách nhân viên nghỉ hưu -->
    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="174dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/trangchu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView148"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/phongban"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/textView152"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Trang chủ" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nhanvien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView114"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/icon4"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/textView115"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Nhân viên" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/chamcong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView164"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/chamcong"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/textView125"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Chấm công" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bangluong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView144"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/luong"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/textView154"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Bảng lương" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/nghihuu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView1124"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/nghihuu"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/textView12154"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Nghỉ hưu" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>

